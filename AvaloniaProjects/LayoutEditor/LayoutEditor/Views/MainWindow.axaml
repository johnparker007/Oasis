<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:LayoutEditor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:LayoutEditor.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"	
        x:Class="LayoutEditor.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Oasis Suite - Layout Editor">

	<Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*" Background="Transparent">
		<DockPanel Grid.Row="0">
			<views:MenuView />
		</DockPanel>
		
		<DockPanel Grid.Row="1">
		</DockPanel>
		
		<DockPanel Grid.Row="2">
			<Button Content="Status"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					Margin="4"/>
		</DockPanel>
	</Grid>



</Window>
